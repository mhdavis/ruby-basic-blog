<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<%= link_to "Edit", edit_post_path(@post), :class => "btn btn-success" %>
<%= link_to "Delete", post_path(@post),
method: :delete,
data: {confirm: 'Are you sure you want to delete?'},
:class => "btn btn-danger" %>
